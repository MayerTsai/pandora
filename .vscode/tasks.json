{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build: library",
      "type": "shell",
      "command": "gcc -g -Wall -Isrc -c src/pandora.c -o pandora.o && ar rcs libpandora.a pandora.o",
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
    {
      "label": "build: server",
      "type": "cppbuild",
      "command": "/usr/bin/gcc",
      "args": [
        "-g",
        "-Wall",
        "server.c",
        "-Isrc",
        "-L${workspaceFolder}",
        "-lpandora",
        "-lpthread",
        "-o",
        "${workspaceFolder}/server"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "dependsOn": [
        "build: library"
      ]
    },
    {
      "label": "build: client",
      "type": "cppbuild",
      "command": "/usr/bin/gcc",
      "args": [
        "-g",
        "-Wall",
        "client.c",
        "-Isrc",
        "-L${workspaceFolder}",
        "-lpandora",
        "-lpthread",
        "-o",
        "${workspaceFolder}/client"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "dependsOn": [
        "build: library"
      ]
    },
    {
      "label": "build: all",
      "dependsOn": [
        "build: server",
        "build: client"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "rm -f ${workspaceFolder}/server ${workspaceFolder}/client ${workspaceFolder}/libpandora.a ${workspaceFolder}/pandora.o",
      "problemMatcher": []
    },
    {
      "label": "install",
      "type": "shell",
      "command": "sudo cp src/pandora.h /usr/include/pandora.h && sudo cp ${workspaceFolder}/libpandora.a /usr/lib/libpandora.a",
      "problemMatcher": [],
      "dependsOn": [
        "build: library"
      ],
      "detail": "Installs the pandora library and header file system-wide."
    }
  ]
}